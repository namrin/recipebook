<%= form_with model: [current_user, recipe] do |form| %>
  <div class = "field">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% recipe.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class = "field">
    <%= form.label :author %><br>
    <%= form.text_field :author %><br>
  </div>

  <div class = "field">
    <%= form.label :ingredients %><br>
    <%= form.text_area :ingredients %><br>
  </div>

  <div class = "field">
    <%= form.label :directions %><br>
    <%= form.text_area :directions %><br>
  </div>  

  <div class = "field">
    <%= form.label :category%><br>
    <%= form.text_field :category %><br>
  </div>

  <div class = "field">
    <%= form.label :reference_website_url %><br>
    <%= form.text_field :reference %><br>
  </div>  

  <div class = "field">
    <%= form.label :image %><br>
    <%= form.file_field :image %><br>
  </div>  

  <div class = "field">
    <%= form.label :note %><br>
    <%= form.text_field :note %><br>
  </div>  

  <div class = "actions">
    <%= form.submit %>
  </div>
<% end %>
